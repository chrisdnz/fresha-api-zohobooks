{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/api/api",
  "targets": {
    "docs": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "pydoc-markdown -p api --render-toc > docs/source/api.md",
        "cwd": "apps/api"
      }
    },
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "apps/api"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "start": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run fastapi dev main.py --host 0.0.0.0 --port $PORT",
        "cwd": "apps/api/api"
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:flake8",
      "outputs": ["{workspaceRoot}/reports/apps/api/pylint.txt"],
      "options": {
        "outputFile": "reports/apps/api/pylint.txt"
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/apps/api/unittests",
        "{workspaceRoot}/coverage/apps/api"
      ],
      "options": {
        "command": "poetry run pytest tests/",
        "cwd": "apps/api"
      }
    },
    "tox": {
      "executor": "@nxlv/python:tox",
      "outputs": [
        "{workspaceRoot}/reports/apps/api/unittests",
        "{workspaceRoot}/coverage/apps/api"
      ],
      "options": {
        "silent": false,
        "args": ""
      }
    }
  },
  "tags": []
}
